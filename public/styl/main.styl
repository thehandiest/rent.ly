$basePadding = 10px;

body
  background-color #46445a
  margin 0
  padding 0
label
  display block
  font-family 'Ubuntu', sans-serif
  margin-top 10px
  font-size 1em
input
  border 1px solid #ddd
  font-family 'Ubuntu', sans-serif
  font-size 1em
  display block
  margin-top 10px
  padding 10px 0
  width 100%
.button
  border none
  padding $basePadding
h1,
h2
  font-family 'Arima Madurai', cursive
  margin 0
  text-align center
h1
  font-size 2em
h2
  font-size 1.4em
#container
  background-color #fff
  margin 10px auto 0
  padding 10px
  width 480px
img
  height auto
  width 100%
#map
  height 400px
  width 100%
  margin-top 10px
